<%= form_for(@single_message) do |f| %>
  <% if @single_message.errors.any? %>
    <div id="error_explanation">
      <h2><%= raw t('errors.template.header', count: @single_message.errors.count, model: t('activerecord.models.single_message'))  %></h2>
      <p><%= t('errors.template.body') %></p>

      <ul>
      <% @single_message.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t(:recipient).capitalize %><br>
    <%= f.text_field :number %>
  </div>

  <%= render '/messages/message_text', :f => f %>

  <%= render '/messages/message_options', :f => f %>

  <%= render '/messages/send_button', :f => f %>

<% end %>
