<h1>Listing single messages</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Recipients</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @single_messages.each do |single_message| %>
      <tr>
        <td><%= single_message.message %></td>
        <td><%= single_message.gsm_numbers.count %></td>
        <td><%= link_to 'Show', single_message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= will_paginate @lists %></p>

<%= link_to 'New Single message', new_single_message_path %>
