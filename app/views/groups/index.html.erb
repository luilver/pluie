<h1><%=t('activerecord.models.group').pluralize %></h1>

<table>
  <thead>
    <tr>
      <th><%=t(:name)%></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to t('show'), group %></td>
        <td><%= link_to t('edit'), edit_group_path(group) %></td>
        <td><%= link_to t('destroy'), group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:new_item, item: t('activerecord.models.group')), new_group_path %>
