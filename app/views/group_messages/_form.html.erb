<%= form_for(@group_message) do |f| %>
  <% if @group_message.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= raw t('errors.template.header', count: @group_message.errors.count, model: t('activerecord.models.group_message')) %>
      </h2>
      <p><%= t('errors.template.body') %></p>

      <ul>
      <% @group_message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </div>
  <fieldset>
    <legend>Groups</legend>
    <%= select_tag :groups,
      options_from_collection_for_select(current_user.groups, "id", "name"),
      {:multiple => true, :size => 5}
    %>
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
