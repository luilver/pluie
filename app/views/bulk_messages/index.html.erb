<h1>Listing bulk messages</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Lists</th>
      <th>Recipients</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bulk_messages.each do |bulk_message| %>
      <tr>
        <td><%= bulk_message.message %></td>
        <td><%= bulk_message.lists.count %></td>
        <td><%= bulk_message.gsm_numbers.count %></td>
        <td><%= link_to 'Show', bulk_message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= will_paginate @bulk_messages %></p>

<%= link_to 'New Bulk message', new_bulk_message_path %>
