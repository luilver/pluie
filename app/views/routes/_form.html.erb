<%= form_for(@route) do |f| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
      <% @route.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <fieldset>
    <legend>User</legend>
    <%= f.select :user_id,
      options_from_collection_for_select(User.all, "id", "email")
    %>
  </fieldset>
  <fieldset>
    <legend>Gateway</legend>
    <%= f.select :gateway_id,
      options_from_collection_for_select(Gateway.all, "id", "name")
    %>
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
